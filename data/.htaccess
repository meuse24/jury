# Deny all direct HTTP access to the data directory.
# This protects JSON files, backups, and temp files from being read via browser.

# Apache 2.4
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2 fallback
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Block index listing
Options -Indexes

# Explicitly deny common file extensions (belt-and-suspenders)
<FilesMatch "\.(json|tmp|bak|log|sql)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
